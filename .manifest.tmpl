image: phasecorex/user-ubuntu:{{#if build.tag}}{{trimPrefix build.tag "v"}}{{else}}latest{{/if}}
{{#if build.tags}}
tags:
{{#each build.tags}}
  - {{this}}
{{/each}}
{{/if}}
manifests:
  -
    image: phasecorex/user-ubuntu:{{#if build.tag}}{{trimPrefix build.tag "v"}}-{{/if}}amd64
    platform:
      architecture: amd64
      os: linux
  -
    image: phasecorex/user-ubuntu:{{#if build.tag}}{{trimPrefix build.tag "v"}}-{{/if}}arm32v7
    platform:
      architecture: arm
      os: linux
      variant: v7
  -
    image: phasecorex/user-ubuntu:{{#if build.tag}}{{trimPrefix build.tag "v"}}-{{/if}}arm64v8
    platform:
      architecture: arm64
      os: linux
      variant: v8
